<p>
    <% if session[:login_uid] %>
        <%= link_to 'ツイートする', new_tweet_path %>
    <% end %>
</p>

<% @tweets.each do |tweet| %>
    <p>
        <%= tweet.message %>
        <% if user = User.find_by(uid: session[:login_uid]) and tweet.user_id == user.id %>
            <%= link_to '削除', tweet_path(tweet) , method: :delete %>
        <% end %>
        
        <% if session[:login_uid] %>
            <% if  tweet.likes.find_by(user_id: User.find_by(uid: session[:login_uid]).id) %>
                <%= link_to 'いいね削除', like_path(tweet), method: :delete %>
            <% else %>
                <%= link_to 'いいね', likes_path(tweet_id: tweet.id), method: :post %>
            <% end %>
        <% end %>
    </p>
<% end %>


<p>
    <% if session[:login_uid] %>
        <%= link_to 'ログアウト', top_logout_path %>
    <% else %>
        <%= link_to 'ログイン', top_main_path %>
    <% end %>
</p>

<p>
    <%= link_to 'ユーザー一覧', users_path %>
</p>