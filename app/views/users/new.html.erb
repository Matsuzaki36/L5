<% if @users.errors.present? %>
    <p>エラーがあります。<p>
    <ul>
        <% @users.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @users , url: {action: :create} do |f| %>
    <%= f.label :uid, 'ID：' %>
    <%= f.text_field :uid %>
    <p>
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.label :password_confirmation, 'パスワード(確認)' %>
        <%= f.password_field :password_confirmation %>
    </p>
    <%= f.submit '登録' %>
<% end %>

<br><%= link_to 'ユーザー一覧に戻る', users_path %>